<VBox minHeight="550.0" minWidth="800.0" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.victornieto.gestionbiblioteca.controller.HomeController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <tabs>
                <Tab text="Inventario">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <StackPane prefHeight="50.0" prefWidth="200.0">
                                       <children>
                                          <Label text="Libros en inventario">
                                             <font>
                                                <Font name="System Bold" size="20.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </StackPane>
                                    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                                       <children>
                                          <Label text="Buscar por:" />
                                          <Pane prefHeight="200.0" prefWidth="5.0" />
                                          <MenuButton mnemonicParsing="false" text="Selecciona un criterio">
                                            <items>
                                              <MenuItem mnemonicParsing="false" text="Action 1" />
                                              <MenuItem mnemonicParsing="false" text="Action 2" />
                                            </items>
                                          </MenuButton>
                                          <Pane prefHeight="200.0" prefWidth="5.0" />
                                          <TextField promptText="Ingresa texto a buscar" />
                                          <Pane prefHeight="200.0" prefWidth="5.0" />
                                          <Button mnemonicParsing="false">
                                             <graphic>
                                                <ImageView pickOnBounds="true" preserveRatio="false">
                                                   <image>
                                                      <Image url="@../img/search.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Button>
                                          <Pane prefHeight="200.0" prefWidth="30.0" HBox.hgrow="ALWAYS" />
                                          <Label text="Mostrar:" />
                                          <Pane prefHeight="200.0" prefWidth="5.0" />
                                          <RadioButton mnemonicParsing="false" text="Unidades">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="showByOption" />
                                             </toggleGroup></RadioButton>
                                          <Pane prefHeight="200.0" prefWidth="5.0" />
                                          <RadioButton mnemonicParsing="false" selected="true" text="Titulos" toggleGroup="$showByOption" />
                                          <Pane prefHeight="200.0" prefWidth="20.0" HBox.hgrow="ALWAYS" />
                                          <Label text="Orden:" />
                                          <Pane layoutX="250.0" layoutY="10.0" prefHeight="200.0" prefWidth="5.0" />
                                          <MenuButton mnemonicParsing="false" text="Ascendente">
                                            <items>
                                              <MenuItem mnemonicParsing="false" text="Action 1" />
                                              <MenuItem mnemonicParsing="false" text="Action 2" />
                                            </items>
                                          </MenuButton>
                                       </children>
                                       <VBox.margin>
                                          <Insets left="40.0" right="40.0" />
                                       </VBox.margin>
                                    </HBox>
                                    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets bottom="40.0" left="40.0" right="40.0" />
                                       </VBox.margin>
                                       <content>
                                          <TableView maxHeight="Infinity">
                                            <columns>
                                                <TableColumn prefWidth="75.0" text="ID" />
                                              <TableColumn prefWidth="75.0" text="Titulo" />
                                              <TableColumn prefWidth="75.0" text="Autor" />
                                                <TableColumn prefWidth="75.0" text="Editorial" />
                                                <TableColumn prefWidth="75.0" text="Edición" />
                                                <TableColumn prefWidth="75.0" text="Año publicación" />
                                                <TableColumn prefWidth="75.0" text="Páginas" />
                                                <TableColumn prefWidth="75.0" text="Unidades" />
                                            </columns>
                                             <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                             </columnResizePolicy>
                                          </TableView>
                                       </content>
                                    </ScrollPane>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Prestamos">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Clientes">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab text="Reportes">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
    </AnchorPane>
  </children>
</VBox>
