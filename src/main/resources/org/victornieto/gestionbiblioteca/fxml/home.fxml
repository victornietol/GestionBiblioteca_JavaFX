<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" minHeight="550.0" minWidth="800.0" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.victornieto.gestionbiblioteca.controller.HomeController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Archivo">
          <items>
            <Menu mnemonicParsing="false" text="Generar reporte de..." >
              <items>
                <MenuItem mnemonicParsing="false" text="Titulos de libros" onAction="#reportTitles"/>
                <MenuItem mnemonicParsing="false" text="Ejemplares de libros" onAction="#reportUnits"/>
                <MenuItem mnemonicParsing="false" text="Préstamos activos" onAction="#reportPrestamos"/>
                <MenuItem mnemonicParsing="false" text="Clientes" onAction="#reportClientes"/>
                <MenuItem mnemonicParsing="false" text="Sanciones activas" onAction="#reportSanciones"/>
              </items>
            </Menu>

            <SeparatorMenuItem mnemonicParsing="false" />

            <MenuItem mnemonicParsing="false" text="Cerrar sesión" onAction="#logout"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Ayuda">
          <items>
            <MenuItem mnemonicParsing="false" text="Información" onAction="#openInfo" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <tabs>
                <Tab text="Inventario">
                  <content>
                    <fx:include fx:id="tabInventario" source="tabs/tabInventario.fxml" />
                  </content>
                </Tab>
                <Tab text="Préstamos">
                  <content>
                      <fx:include fx:id="tabPrestamos" source="tabs/tabPrestamos.fxml" />
                  </content>
                </Tab>
                  <Tab text="Clientes">
                    <content>
                        <fx:include fx:id="tabClientes" source="tabs/tabClientes.fxml" />
                    </content>
                  </Tab>
                  <Tab text="Sanciones">
                    <content>
                      <fx:include fx:id="tabSanciones" source="tabs/tabSanciones.fxml" />
                    </content>
                  </Tab>
                  <Tab fx:id="tabReportesTab" text="Reportes">
                    <content>
                        <fx:include fx:id="tabReportes" source="tabs/tabReportes.fxml" />
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
    </AnchorPane>
  </children>
</VBox>
